{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"experimentalDecorators": true,
		"target": "ES6",
		"baseUrl": "./",
		"allowJs": true,
		"lib": [
			"ES6",
			"DOM"
		],
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"rootDir": "projects",
		"esModuleInterop": true,
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"projects"
	]
}
